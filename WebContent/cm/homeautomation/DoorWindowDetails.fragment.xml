<core:FragmentDefinition xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog title="Fenster und TÃ¼ren" afterClose="afterDoorWindowDialogClose"
		stretch="true" horizontalScrolling="false" verticalScrolling="true"
		contentHeight="100%">
		<content>
			<Panel expandable="false" expanded="true" width="auto"
				class="sapUiResponsiveMargin" id="remoteControl">
				<content>

					<Table
						items="{
			path: 'doorWindow>/',
			sorter: { 
				path:'state' , descending: true
			}
		}"
						title="Devices" selectionMode="MultiToggle" sticky="ColumnHeaders">
						<columns>
							<Column>
								<Text text="Raum" />
							</Column>
							<Column>
								<Text text="Name" />
							</Column>
							<Column>
								<Text text="Zustand" />
							</Column>
							<Column>
							</Column>
							<Column>
								<Text text="{i18n>since}" />
							</Column>
						</columns>

						<items>
							<ColumnListItem>
								<cells>
									<Text text="{doorWindow>room/roomName}" />
									<Text text="{doorWindow>window/name}" />
									<Text text="{=${doorWindow>state} === 0 ? 'geschlossen': 'offen' }" />
									<Switch text="{=${doorWindow>state} === 0 ? false: true }" customTextOn="O" customTextOff="G" change="doorWindowStateChange" />
									<Text
										text="{
											path: 'doorWindow>date',
											formatter: 'formatter.dateTimeFormatter'
}" />
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Panel>


		</content>
		<beginButton>


		</beginButton>
		<endButton>
		<Button text="Aktualisieren" press="doorWindowDialogReload" />
			<Button text="Schliessen" press="doorWindowDialogClose" />
		</endButton>

	</Dialog>
</core:FragmentDefinition>
